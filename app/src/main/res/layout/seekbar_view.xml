<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="SOS"
            android:textColor="#FC0000"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="0"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="1"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="2"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="3"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="4"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="5"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="6"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="7"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="8"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />

        <TextView
            android:text="9"
            android:textColor="#ACABAB"
            style="@style/styleTextSeekbar" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

        <ImageView style="@style/styleImageSeekbar" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar"
        android:max="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>